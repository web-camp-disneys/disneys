         <% if customer_signed_in? %>
          <div class="mx-auto" style="color: #ffffff;">ようこそ <%= "#{current_customer.last_name} #{current_customer.first_name}"%> さん</div> 
         <% else %>
          <div class="mx-auto" style="color: #ffffff;">ようこそ ゲスト　さん</div> 
         <% end %>
         
         <ul class="nav pull-right nav-pills ml-auto mt-2 mt-lg-0">
          <% if customer_signed_in? %>

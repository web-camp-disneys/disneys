<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="row">
        <div class="col-md-6">
          <h4 class="scs"><span class="alert-dark pl-4 pr-4">注文履歴詳細</span></h4>
            <p class="font">注文情報</p>
              <table class="table table-bordered">
                <tbody>
                  <tr>
                    <th class="table-active" style="width:120px;">注文日</th>
                    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                  </tr>
                  <tr>
                    <th class="table-active" style="">配送先</th>
                    <td><%= @order.postal_code %><br>
                  		  <%= @order.address %><br>
                  		  <%= @order.name %>
                    </td>
                  </tr>
                  <tr>
                    <th class="table-active" style="">支払方法</th>
                    <td><%= @order.payment_method %></td>
                  </tr>
                  <tr>
                    <th class="table-active" style="">ステータス</th>
                    <td><%= @order.status %></td>
                  </tr>
                </tbody>
              </table>
        </div>

    <div class="col-md-4">
      <div class="heig">
        <p class="font">請求情報</p>
        <table class="table table-bordered">
          <thead>
            <tr><th class="table-active" style="width:180px;">商品合計</th><td><%= @order.total_payment - @order.shipping_cost %></td></tr>
            <tr><th class="table-active">配送料</th><td><%= @order.shipping_cost %></td></tr>
            <tr><th class="table-active">ご請求</th><td><%= @order.total_payment %></td></tr>
          </thead>
        </table>
      </div>
    </div>
    <div class="offset-md-2"></div>
    </div>

      <p class="font">注文内容</p>
      <table ="table table-bordered">
        <thead>
        <tr class="table-active">
         <th style="width:400px; height:50px;">商品</th>
         <th style="width:150px;">単価（税込）</th>
         <th>個数</th>
         <th>小計</th>
       </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
      　　　</td>
      　　　<td>
              <%= order_detail.price %>
      　　　</td>
      　　　<td>
              <%= order_detail.amount %>
      　　　</td>
      　　　<td>
              <%= order_detail.price * order_detail.amount %>
      　　　</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

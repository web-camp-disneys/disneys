<h2>注文詳細</h2>
<h3>注文情報</h3>
<table class="table table-bordered">
  <tbody>
    <tr>
      <th class="table-active"  style="width:430px;">注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
    <tr>
      <th class="table-active"  style="width:430px;">配送先</th>
      <td><%= @order.postal_code %><br>
    		  <%= @order.address %><br>
    		  <%= @order.name %>
      </td>
          </tr>
    <tr>
      <th class="table-active"  style="width:430px;">支払方法</th>
      <td><%= @order.payment_method %></td>
          </tr>
              <tr>
      <th class="table-active"  style="width:430px;">ステータス</th>
      <td><%= @order.status %></td>
          </tr>
      </tbody>
</table>

<h3>請求情報</h3>
<table class="table table-bordered col-md-9 offset-md-1">
  <tbody>
    <tr>
      <th class="table-active"  style="width:430px;">商品合計</th>
      <td><%= @order.total_payment - @order.shipping_cost %></td>
          </tr>
    <tr>
      <th class="table-active"  style="width:430px;">配送料</th>
      <td><%= @order.shipping_cost %>
      </td>
          </tr>
    <tr>
      <th class="table-active"  style="width:430px;">ご請求額</th>
      <td><%= @order.total_payment %></td>
          </tr>
      </tbody>
</table>

<h3>注文内容</h3>
<table ="table table-bordered col-md-9 offset-md-1">
  <thead>
  <tr>
   <th class="table-active" style="width:100px;">商品</th>
   <th class="table-active" style="width:150px;">単価（税込）</th>
   <th class="table-active">個数</th>
   <th class="table-active">小計</th>
 </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td>
        <%= order_detail.item.name %>
　　　</td>
　　　<td>
        <%= order_detail.price %>
　　　</td>
　　　<td>
        <%= order_detail.amount %>
　　　</td>
　　　<td>
        <%= order_detail.price * order_detail.amount %>
　　　</td>
    </tr>
    <% end %>
  </tbody>

</table>
<div class="container">
  <div class="row">
    <div class="col-md-12">

    <h4 class="scs"><span class="alert-dark pl-4 pr-4">注文情報確認</span></h4>
    <div class="row">
        <div class="col-md-9">
           <table class="table table-bordered">
        <thead>
          <tr class="table-active">
            <th style="width:350px;">商品名</th>
            <th style="">単価（税込）</th>
            <th style="width:170px;">数量</th>
            <th style="width:150px;">小計</th>
          </tr>
        </thead>

      <tbody>
          <% @subtotal = 0 %>
          <% @total = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag(cart_item.item, :image, size: "50x40", fallback: "no_image.jpg") %>
            <%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
      <td><%= cart_item.amount %></td>

      <td><%= @subtotal = cart_item.item.price * cart_item.amount %></td>
        <% @total += @subtotal %>
      </tr>
      <% end %>
      </tbody>
      </table>
      </div>

      <table class="table table-bordered col-md-3">
      <tbody>
        <tr>
          <th class="table-active">送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th class="table-active">商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th class="table-active">お支払金額</th>
          <td><%= @totalpay = @total + 800  %></td>
        </tr>
       </tbody>
    </table>
    </div>

    <h5 class="sh">
      <span class="ll font">支払方法</span>
      <%= @order.payment_method %>
    </h5>

    <h5>
      <span class="ll font">お届け先</span>
      <%= "#{@order.postal_code} #{@order.address}" %><br>
      <div class="na display"></div><%="#{@order.name}" %>
      <%= form_with model:@order, url: orders_path,method: :post, local:true do |f|  %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :name, value: @order.name %>
      <%= f.hidden_field :shipping_cost, value: 800 %>
      <%= f.hidden_field :total_payment, value: @totalpay %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <% if params[:order][:shipping_address] == "2" %>
      <%= f.hidden_field :shipping_address, value: params[:order][:shipping_address] %>
      <% end %>
    </h5>

    <div class="tb">
      <%= f.submit '注文を確定する ', class:"btn btn-success pl-5 pr-5" %>
      <% end %>
    </div>
  </div>
</div>
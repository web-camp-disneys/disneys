<h2>注文履歴一覧</h2>

<% if @orders.present? %>
  <table ="table table-bordered col-md-9 offset-md-1">
          <thead>
            <tr>
              <th class="table-active" style="width:100px;">注文日</th>
              <th class="table-active" style="width:150px;">配送先</th>
              <th class="table-active">注文商品</th>
              <th class="table-active">支払金額</th>
              <th class="table-active">ステータス</th>
              <th class="table-active">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
    		          <%= order.created_at.strftime('%Y/%m/%d') %>
    		        </td>
    		        <td>
    		          <%= order.postal_code %><br>
    		          <%= order.address %><br>
    		          <%= order.name %>
    		        </td>
    		        <td>
    		          <% order.order_details.each do |order_detail| %>
    		          	<%= order_detail.item.name %><br>
    		          	<% end %>
    		        </td>
    		        <td>
    		          <%= order.total_payment %>円
    		        </td>
    		        <td>
    		          <%= order.status %>
    		        </td>
         	      <td>
       	          <%= link_to "注文詳細", order_path(order.id), class: "glyphicon glyphicon-zoom-in btn btn-success" %>
       	        </td>
              </tr>
            <% end %>
          </tbody>
        </table>
         <% else %>
        <p>注文履歴がありません。</p>
      <% end %>
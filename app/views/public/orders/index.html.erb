<div class="container">
  <div class="row">
    <div class="col-md-12">
        <h4 class="scs"><span class="alert-dark pl-4 pr-4">注文履歴一覧</span></h4>
        <% if @orders.present? %>
        <table ="table table-bordered">
            <thead>
              <tr class="table-active">
                <th style="width:180px; height:60px;">注文日</th>
                <th style="width:450px;">配送先</th>
                <th style="width:170px;">注文商品</th>
                <th style="width:150px;">支払金額</th>
                <th style="width:140px;">ステータス</th>
                <th style="width:140px;">注文詳細</th>
              </tr>
            </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
    		          <span class="iy"></span><%= order.created_at.strftime('%Y/%m/%d') %>
    		        </td>
    		        <td>
    		          <span class="iy"></span><%= order.postal_code %><br>
    		          <span class="iy"></span><%= order.address %><br>
    		          <span class="iy"></span><%= order.name %>
    		        </td>
    		        <td>
    		          <% order.order_details.each do |order_detail| %>
    		          	<span class="iy"></span><%= order_detail.item.name %><br>
    		          	<% end %>
    		        </td>
    		        <td>
    		          <span class="iy"></span><%= order.total_payment %>円
    		        </td>
    		        <td>
    		          <span class="iy"></span><%= order.status %>
    		        </td>
         	      <td>
       	          <div class="pp"><%= link_to "表示する", order_path(order.id), class: " btn btn-primary" %></div>
       	        </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% else %>
          <p>注文履歴がありません。</p>
        <% end %>
    </div>
  </div>
</div>


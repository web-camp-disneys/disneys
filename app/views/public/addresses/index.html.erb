<h4 style="margin:40px 150px;"><span class="alert-dark pl-3 pr-3">配送先登録 / 一覧</span></h4>
<div style="margin-left:80px;">

<%= render "layouts/error_messages", resource: @address %>

<%= form_with model:@address, url: addresses_path, local:true do |f| %>
  <label style="margin-right:20px;">郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code, :size => "30*30" %>
  <br>
  <label style="margin-right:160px;">住所</label>
  <%= f.text_field :address, :size => "60*60" %>
  <br>
  <label style="margin-right:160px;">宛名</label>
  <%= f.text_field :name, :size => "30*30" %>
  <span style="margin-left:260px;"><%= f.submit '登録する', class:"btn btn-success pl-5 pr-5" %></span>
<% end %>
</div>


<table class="table table-bordered col-md-7" style="margin:80px 0 0 40px;">
  <thead>
    <tr class="table-active">
      <th>郵便番号</th>
      <th style="width:320px;">住所</th>
      <th>宛名</th>
      <th col-span="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |add| %>
    <tr>
      <td><%= add.postal_code %></td>
      <td><%= add.address %></td>
      <td><%= add.name %></td>
      <td class="">
        <span class="ml-3 mr-2"><%= link_to "編集する", edit_address_path(add.id), class:"btn btn-primary active pl-3 pr-3" %></span>
        <%= link_to "削除する", address_path(add.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<h1><%="#{@customer.last_name} #{@customer.first_name}"%>さんの会員情報の編集</h1>

<%= form_with model:@customer, url: customers_path(@customer), method: :patch, local:true do |f| %>
<table class="table table-hover table-inverse">

      <tbody>
          <!--<tr>-->
          <!--    <td>会員ID</td>-->
          <!--    <td>%= @customer.id %></td>-->
          <!--</tr>-->
          <tr>
              <td>氏名</td>
              <td>(性)<%= f.text_field :last_name %> (名)<%= f.text_field :first_name %></td>
          </tr>
          <tr>
              <td>フリガナ</td>
              <td>(セイ)<%= f.text_field :last_name_kana %> (メイ)<%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
          </tr>
          <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
              <td>住所</td>
              <td><%= f.text_field :address %></td>
          </tr>
          <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
              <td><%= f.submit '編集内容を保存する', class:"btn btn-secondary" %></td>
          </tr>
      </tbody>
</table>
<% end %>
<%= link_to "退会する", customers_unsubscribe_path %>